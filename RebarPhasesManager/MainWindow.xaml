<Window x:Class="RebarPhasesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RebarPhasesManager"
        mc:Ignorable="d"
        Title="Rebar Phases Manager"
        Width="550" MinWidth="550" MaxWidth="1000"
        Height="400" MinHeight="400" MaxHeight="800">
    <Window.Resources>
        <local:PhaseManager x:Key="phaseManager"/>
        <!--DataTemplate for the Phase Color column. -->
    </Window.Resources>
    <Grid DataContext="{StaticResource ResourceKey=phaseManager}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dataGrid" ItemsSource="{Binding PhaseViewList}"
                  AutoGenerateColumns="False"
                  VerticalGridLinesBrush="LightGray" BorderBrush="LightGray"
                  FontSize="11" RowHeight="25" GridLinesVisibility="Vertical"
                  ColumnWidth="*" Height="Auto" VerticalAlignment="Top" >
  
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Visible" MinWidth="45" Width="45">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Visible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Checked="Checked" Unchecked="Unchecked"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Color" Width="40" MinWidth="40">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Background="{Binding HexColor}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Number" Width="50" MinWidth="50"
                                    Binding="{Binding Number}"/>
                <DataGridTextColumn Header="Name" Width="70" MinWidth="70"
                                    Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Comment" MinWidth="125"
                                    Binding="{Binding Comment}"/>
                <DataGridTextColumn Header="Current"  Width="55" MinWidth="55"
                                    Binding="{Binding Current}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Button x:Name="button_Show" Content="Set" Margin="10,10,10,0" Click="button_Set_Click"/>
            <Button x:Name="button_Reset" Content="Reset" Margin="10" Click="button_Reset_Click"/>
        </StackPanel>

    </Grid>

</Window>
